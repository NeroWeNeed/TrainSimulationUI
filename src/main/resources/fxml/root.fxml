<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.nwn.ts.controller.RootController"
            prefHeight="400.0" prefWidth="600.0"
            fx:id="container">

    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Run Simulation" onAction="#menuFileStartSimulation"/>
                <MenuItem text="Reset" onAction="#menuFileResetSimulation"/>
                <MenuItem text="Export CSV" onAction="#menuFileExportCSV"/>
            </Menu>
            <Menu text="Edit">
                <MenuItem text="Edit Trains"/>
                <MenuItem text="Edit Railway"/>
            </Menu>
            <Menu text="View">
                <MenuItem text="View Recommendations"/>
                <MenuItem text="Compare to Older Run"/>
            </Menu>

        </MenuBar>

    </top>
    <center>
        <Canvas style="-fx-background-color: #f6f5f5;">

        </Canvas>
    </center>
    <left>
        <fx:include source="root-statistics.fxml"/>



    </left>
</BorderPane>
